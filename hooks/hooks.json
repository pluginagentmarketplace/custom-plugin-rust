{
  "hooks": [
    {
      "name": "on-learning-start",
      "description": "Triggered when user starts a learning path",
      "events": ["command:learn"],
      "actions": [
        {
          "type": "track_progress",
          "properties": {
            "event": "learning_started",
            "timestamp": "${timestamp}",
            "user_goal": "${user_selected_role}"
          }
        },
        {
          "type": "initialize_learning_state",
          "properties": {
            "role": "${user_selected_role}",
            "level": "${selected_level}",
            "progress": 0
          }
        }
      ]
    },
    {
      "name": "on-assessment-complete",
      "description": "Triggered when user completes an assessment",
      "events": ["command:assess"],
      "actions": [
        {
          "type": "calculate_score",
          "properties": {
            "answers": "${assessment_answers}",
            "topic": "${assessment_topic}"
          }
        },
        {
          "type": "award_badge",
          "properties": {
            "score": "${calculated_score}",
            "threshold": 75,
            "skill": "${assessment_topic}"
          }
        },
        {
          "type": "update_progress",
          "properties": {
            "completed_assessment": true,
            "score": "${calculated_score}"
          }
        }
      ]
    },
    {
      "name": "on-skill-mastery",
      "description": "Triggered when user masters a skill (multiple assessments passed)",
      "events": ["skill:milestone_reached"],
      "actions": [
        {
          "type": "award_certification",
          "properties": {
            "skill": "${skill_name}",
            "level": "intermediate"
          }
        },
        {
          "type": "suggest_next_skill",
          "properties": {
            "current_skill": "${skill_name}",
            "learning_path": "${current_path}"
          }
        }
      ]
    },
    {
      "name": "on-milestone-achieved",
      "description": "Triggered when user completes a learning milestone",
      "events": ["milestone:completed"],
      "actions": [
        {
          "type": "celebrate",
          "properties": {
            "milestone": "${milestone_name}",
            "progress_percentage": "${progress_percent}"
          }
        },
        {
          "type": "unlock_advanced_content",
          "properties": {
            "content_type": "advanced_projects",
            "unlock_for": "${current_role}"
          }
        }
      ]
    },
    {
      "name": "on-agent-invocation",
      "description": "Triggered when an agent is invoked",
      "events": ["agent:invoked"],
      "actions": [
        {
          "type": "load_context",
          "properties": {
            "agent": "${invoked_agent}",
            "user_level": "${user_knowledge_level}",
            "previous_topics": "${covered_topics}"
          }
        },
        {
          "type": "personalize_response",
          "properties": {
            "adapt_to_level": true,
            "include_examples": true
          }
        }
      ]
    },
    {
      "name": "on-skill-requested",
      "description": "Triggered when a skill is requested or needed",
      "events": ["skill:requested"],
      "actions": [
        {
          "type": "validate_prerequisites",
          "properties": {
            "skill": "${requested_skill}"
          }
        },
        {
          "type": "load_skill_content",
          "properties": {
            "skill": "${requested_skill}",
            "with_examples": true
          }
        }
      ]
    }
  ],
  "config": {
    "auto_save_progress": true,
    "progress_save_interval": 300,
    "enable_analytics": true,
    "track_user_journey": true,
    "certification_enabled": true
  }
}
